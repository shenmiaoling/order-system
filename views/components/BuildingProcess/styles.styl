.building-process
  padding: 5.375rem 10.625rem
  background-color: #f8f9fa

.building-process .title
  text-align: center
  font-size: 48px
  position: relative
  z-index: 1

.building-process .title:after
  content: ""
  display: block
  margin: 0 auto
  width: 9.375rem
  padding-top: 10px
  border-bottom: 7px solid #71c7e0

.card-container
  display: flex
  margin-top: 5.3125rem
  height: 19.8125rem

.card-content
  border-radius: 8px
  background-color: #ffffff
  box-shadow: 0 4px 16px 0 rgba(0, 0, 0, 0.5)
  flex: 1
  font-size: 20px

.card-space
  margin-right: 10.625rem

.step-title
  text-align: center
  vertical-align: middle
  width: 100%
  border-bottom: 3px solid #c0c0c0
  padding: 17px 0

.step-tag
  color: #d8777b
  font-size: 40px!important

.content-title
  color: #303541
  font-size: 36px
  text-align: center
  padding-top: 18px

.step-content
  color: #797979
  padding: 30px 38px
