.home-bg
  width: 100%
  height: 100vh
  background-image: linear-gradient(to bottom, rgba(113, 199, 224, 0.31), #d8777b), url('../../../images/bannerImg.jpeg')
  background-size: cover
  background-repeat: no-repeat
  background-position: center center
  border: 1px solid rgba(255,255,255,0)
  text-align: center
  padding-top: 6.25rem

.medel-img
  width: 30%
  margin-bottom: 3.125rem

.home-bg .title
  font-size: 2.25rem
  color: #ffffff
  line-height: 1.8

.go-btn
  margin-top: 0.625rem
  padding: 0.25rem 4.8125rem
  border-radius: 0.5rem
  font-size: 1.875rem
  color: #ffffff
  background-color: #71c7e0
  border: none
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.5)


@media (max-width: 1400px)
  .home-bg
    padding-top: 30%

@media (max-width: 1025px)
  .medel-img
    width: 50%
    margin-bottom: 3.125rem

  .home-bg .title
    font-size: 3.25rem

  .go-btn
    font-size: 2.875rem
    padding: 1.25rem 5.8125rem
    border-radius: 1.5rem
